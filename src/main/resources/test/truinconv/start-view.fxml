<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="test.truinconv.StartViewController">
    <BorderPane>
        <center>
            <VBox alignment="CENTER" spacing="24">
                <Label fx:id="title"
                       alignment="CENTER"
                       text="TruInConv"
                       maxWidth="Infinity"
                       wrapText="true"
                       styleClass="title-label"/>
                <!-- Use HBox as the default container - we'll switch this dynamically -->
                <HBox fx:id="buttonPane"
                      alignment="CENTER"
                      spacing="36">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <Button fx:id="imageButton" text="Images" styleClass="circle-btn"/>
                    <Button fx:id="audioButton" text="Media" styleClass="circle-btn"/>
                    <Button fx:id="videoButton" text="Docs" styleClass="circle-btn"/>
                </HBox>
            </VBox>
        </center>
        <top>
            <HBox alignment="TOP_RIGHT">
                <Region HBox.hgrow="ALWAYS"/>
                <ToggleButton fx:id="themeToggleBtn"
                              styleClass="theme-toggle-btn"
                              focusTraversable="false">
                    <graphic>
                        <FontIcon iconLiteral="mdi2m-moon-waning-crescent"
                                  iconColor="#888"
                                  iconSize="24"/>
                    </graphic>
                </ToggleButton>
            </HBox>
        </top>
        <padding>
            <Insets top="15" right="25" bottom="15" left="25"/>
        </padding>
    </BorderPane>
</StackPane>